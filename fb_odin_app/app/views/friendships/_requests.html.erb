
<% if current_user == @user %>
  <h3>My friend requests:</h3>  <p>
    <ul>
        <% @user.requested_friendships.each do |user_object| %>
        <li>
          <%= user_object.email %>
          <br><%= user_object %><br>
          <%= link_to "Accept", friendship_path(:id => user_object), :method => "put" %>
          <%= link_to "Decline", friendship_path(:id => user_object), :method => "delete" %>
        </li>
      <% end %>
    </ul>
    <hr>
<% end %>
  </p>
