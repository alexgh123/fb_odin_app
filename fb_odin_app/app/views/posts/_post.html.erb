<div id="post-<%= post.id %>">


  <span class="content"><%= post.content %></span><br>

  <span class="like button">
    <%= link_to "Like this post", "#" %>
  </span>
  <!-- Like.create(post_id:post.id, user_id:current_user.id) -->
  <br>

  By: <span class="user"><%= post.user.first_name %></span>
  <br>

  <span class="timestamp">
    Posted <%= time_ago_in_words(post.created_at) %> ago.
  </span>
  <br>

  <span class="likes">
    <%= link_to "Likes(#{ post.likes.count })", "#likers" %>
  </span>
  <hr>

</div>