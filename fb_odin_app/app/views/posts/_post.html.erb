
<div id="post-<%= post.id %>">
  <h4>Post</h4>
  <span class="content"><%= post.content %></span><br>
  <br>

  <span class="timestamp">
    Posted <%= time_ago_in_words(post.created_at) %> ago by <%= post.user.first_name %>
  </span>
  <br>

  <span class="likes">
    <%= render 'likes/like_button', post: post %>
    <%= render 'likes/likers', post: post %>
  </span>


  <span class= "comments">
    <h4> Comments: </h4>
    <% if post.comments %>
      <% post.comments.each do |comment| %>
        <%= comment.content %><br><br>
        Author: <%= User.find(comment.user_id).first_name %>
      <% end %>
    <% end %>
  </span>

<hr>

</div>

