
<div id="post-<%= post.id %>">
  <h4>Post</h4>
  <span class="content"><%= post.content %></span><br>
  <br>

  <span class="timestamp">
    Posted <%= time_ago_in_words(post.created_at) %> ago by <%= post.user.first_name %>
  </span>
  <br>

  <span class="likes">
    <%= render 'likes/like_button', post: post %>
    <%= render 'likes/likers', post: post %>
  </span>
    <%= link_to "Comment on this post", new_comment_path, post_id: post.id %>


  <span class= "comments">
    <% # render 'comments/comment', post: post %>

    <%= render partial: 'comments/comment', collection: post.comments %>

    <% #def render the new comment form here %>

  </span>

  <hr>
</div>

